@model IEnumerable<Product>
<h1>Shop</h1>
<p>Count: @Model.Count()</p>
<div class="row">
    
@foreach (var p in Model)
{
    <div class="col-md-3">
        <div class="border bg-light rounded p-1">
            
        <img src="~/img/@(p.ArtId).jpg" class="img-fluid">
        <h3>
            @p.Category - @p.Size
        </h3>
        <ul>
            <li>@p.Price.ToString()</li>
            <li>@p.Artist</li>
            <li>@p.Title</li>
            <li>@p.ArtDescription</li>
        </ul>
                </div>

    </div>
}
</div>
